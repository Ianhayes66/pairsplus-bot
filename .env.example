# ---------------------------------------------
# Alpaca API Keys (required)
ALPACA_KEY=your_alpaca_api_key_here
ALPACA_SECRET=your_alpaca_secret_here

# ---------------------------------------------
# Discord webhook URL for trade notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# ---------------------------------------------
# Bot execution mode
# websocket = real-time trading with Alpaca stream
# polling   = scheduled trading every X minutes
LIVE_MODE=websocket

# ---------------------------------------------
# Order type for trade execution
# Options: MARKET, LIMIT
ORDER_TYPE=MARKET

# ---------------------------------------------
# Max allowed peg distance for limit orders (if ORDER_TYPE=LIMIT)
PEG_DISTANCE=0.05

# Split notional for liquidity management
# true or false
SPLIT_NOTIONAL=false

# ---------------------------------------------
# Strategy signal parameters
Z_THRESHOLD=1.5
LOOKBACK_DAYS=90
ROLLING_WINDOW=60
KALMAN_COV=0.005

# ---------------------------------------------
# Infra / Monitoring
METRICS_PORT=8000
POLLING_INTERVAL_MINUTES=60

# ---------------------------------------------
# Universe of tradable symbols (Alpaca-supported tickers)
# Example universe (for reference only):
# UNIVERSE=AAPL,MSFT,AMZN,GOOGL,META,TSLA,NVDA,JPM,V,BAC,DIS,NFLX,CRM,INTC,CSCO,PEP