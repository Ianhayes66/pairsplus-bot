# Alpaca API Keys
ALPACA_KEY=your_alpaca_api_key_here
ALPACA_SECRET=your_alpaca_secret_here

# Discord webhook URL for trade notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Order type for trade execution (e.g., market, limit)
ORDER_TYPE=market

# Threshold for cointegration spread entry
Z_THRESHOLD=1.5

# Number of days to look back for historical bars
LOOKBACK_DAYS=90

# Rolling window size for z-score
ROLLING_WINDOW=60

# Kalman filter covariance
KALMAN_COV=0.005

# Prometheus metrics server port
METRICS_PORT=8000

# Polling interval in minutes if not using WebSocket
POLLING_INTERVAL_MINUTES=60

# Notional split factor if you want to split order size
SPLIT_NOTIONAL=1

# Max allowed spread distance
PEG_DISTANCE=0.05